<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DigitalExaminationSys</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Add these references to your HTML -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-pzjw8f+ua7Kw1TIq0v8FqFjcJ6pajs/rfdfs3SO+kE3L5SWti1YU6A5Ls5D8l5JFdp" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-KyZXEAg3QhqLMpG8r+JfJ/5r5O5I5sw5f5QG5c5Bn5l5u5j5Y5j5E5d5E5I5f5K5l5" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-pzjw8f+ua7Kw1TIq0v8FqFjcJ6pajs/rfdfs3SO+kE3L5SWti1YU6A5Ls5D8l5JFdp" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DigitalExaminationSys.styles.css" asp-append-version="true" />

    <style>
        /* Style for the dropdown container */
        .dropdown {
            position: relative;
            display: inline-block;
        }

        /* Style for the dropdown content (hidden by default) */
        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9; /* Background color for the dropdown menu */
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

            /* Style for dropdown links */
            .dropdown-content a {
                padding: 12px 16px;
                text-decoration: none;
                display: block;
                color: #333; /* Link text color */
            }

                /* Change the link color on hover */
                .dropdown-content a:hover {
                    background-color: #ddd; /* Background color on hover */
                }

        /* Show the dropdown content when hovering over the dropdown container */
        #registerDropdown:hover .dropdown-content {
            display: block;
        }

    </style>
</head>
<body>
    <header >
        <nav style=" background-color: rgb(200, 220, 240);" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a style="font-family: 'Alkatra', cursive;" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">DigitalExaminationSys</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item" id="registerDropdown">
                            <a class="nav-link text-dark" href="#">Register</a>
                            <div class="dropdown-content">
                                <a asp-area="" asp-controller="Home" asp-action="RegisterProfessor">Register as Professor</a>
                                <a asp-area="" asp-controller="Home" asp-action="RegisterStudent">Register as Student</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer style=" background-color: rgb(200, 220, 240);" class="border-top footer text-dark">
        <div class="container">
            &copy; 2023 - DigitalExaminationSys - <a asp-area="" asp-controller="Home" asp-action="Index">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


<script>
    document.getElementById("registerDropdown").addEventListener("mouseover", function () {
        document.getElementsByClassName("dropdown-content")[0].style.display = "block";
    });

    document.getElementById("registerDropdown").addEventListener("mouseout", function () {
        document.getElementsByClassName("dropdown-content")[0].style.display = "none";
    });
</script>
